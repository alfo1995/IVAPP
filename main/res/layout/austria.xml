<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:text="€"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/TotalTextView"
        android:layout_alignBottom="@+id/TotalTextView"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toRightOf="@+id/fab"
        android:layout_toEndOf="@+id/fab"
        android:textColor="@android:color/black" />

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@drawable/au"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView3"
        android:layout_width="100dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/numberTxt"
        android:hint="enter number"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="24sp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:textColorHint="@android:color/black" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:fontFamily="sans-serif-condensed"
        android:text="scorporo dell'iva :"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="base imponibile :"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="prezzo  ivato :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Calculate on 20%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calcBtn"
        android:elevation="24dp"
        android:background="@drawable/buttonshape"
        android:textColor="#FFB940"
        android:layout_below="@+id/numberTxt"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="?android:attr/homeAsUpIndicator"
        android:id="@+id/fab"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/text1"
        android:layout_alignStart="@+id/text1"
        android:layout_marginBottom="11dp" />

    <TextView
        android:text="€"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="30sp"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/textView13"
        android:layout_toRightOf="@+id/fab"
        android:layout_toEndOf="@+id/fab"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|bold"
        android:id="@+id/text1"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_weight="0.09"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignRight="@+id/text2"
        android:layout_alignEnd="@+id/text2"
        android:textColor="@android:color/black" />

    <TextView
        android:text="€"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="30sp"
        android:layout_below="@+id/textView13"
        android:layout_toLeftOf="@+id/textView13"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|bold"
        android:id="@+id/text2"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_weight="0.09"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignRight="@+id/TotalTextView"
        android:layout_alignEnd="@+id/TotalTextView"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|bold"
        android:id="@+id/TotalTextView"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_weight="0.09"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />

</RelativeLayout>